<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompat.NoTitle" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppCompat.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ============================== Image Views ================================-->

    <style name="imageView">

    </style>

    <style name="imageView.logo">
        <item name="android:layout_width">@dimen/dimen_100</item>
        <item name="android:layout_height">@dimen/dimen_100</item>
        <item name="android:src">@drawable/ic_charity_with_books</item>
    </style>

    <style name="imageView.tourScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- ============================== Text Views ============================== -->

    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>
    </style>

    <style name="textView.link">
        <item name="android:autoLink">all</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textView.title">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="textView.description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/dimen_12</item>
        <item name="android:paddingRight">@dimen/dimen_12</item>
        <item name="android:paddingLeft">@dimen/dimen_12</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/dimen_12</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- ============================== Edit Texts ============================== -->
    <style name="editText">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50</item>
        <item name="android:layout_marginTop">@dimen/dimen_12</item>
        <item name="android:layout_marginBottom">@dimen/dimen_12</item>
        <item name="android:paddingLeft">@dimen/dimen_12</item>
    </style>

    <style name="editText.name">
        <item name="android:drawableLeft">@drawable/ic_input_user_2</item>
        <item name="android:drawablePadding">@dimen/dimen_20</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="editText.phone">
        <item name="android:drawableLeft">@drawable/ic_input_phone_2</item>
        <item name="android:drawablePadding">@dimen/dimen_20</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="editText.textPassword">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:imeOptions">actionGo</item>
    </style>

    <!-- ============================== Buttons ==============================-->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button.actionPrimary">
        <item name="android:layout_marginTop">@dimen/dimen_16</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="button.actionSecondary">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>
